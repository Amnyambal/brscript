// ==UserScript==
// @name         Black Log: House Helper
// @namespace    http://tampermonkey.net/
// @version      2.0
// @description  Показывает информацию о домах и квартирах по ID на странице логов
// @author       You
// @match        https://logs.blackrussia.online/gslogs/*
// @grant        GM_xmlhttpRequest
// @connect      raw.githubusercontent.com
// @run-at       document-end
// ==/UserScript==

(function() {
    'use strict';

    // Стили для кнопок и модального окна
    const style = document.createElement('style');
    style.textContent = `
        .house-info-btn {
            background: linear-gradient(145deg, #0d6efd, #0a58ca);
            color: white;
            border: none;
            padding: 4px 8px;
            margin: 0 4px;
            font-size: 11px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        .house-info-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 3px 8px rgba(13, 110, 253, 0.4);
        }
        .house-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #1e1e1e;
            color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            z-index: 10000;
            max-width: 500px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
            font-family: 'Segoe UI', sans-serif;
            border: 1px solid #333;
        }
        .house-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.7);
            z-index: 9999;
            backdrop-filter: blur(4px);
        }
        .house-modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #333;
        }
        .house-modal-title {
            font-size: 18px;
            font-weight: 600;
            color: #4dabf7;
            margin: 0;
        }
        .house-modal-close {
            background: none;
            border: none;
            color: #ccc;
            font-size: 24px;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .house-modal-close:hover {
            color: white;
        }
        .house-info-item {
            margin: 8px 0;
            display: flex;
            align-items: flex-start;
        }
        .house-info-label {
            font-weight: 600;
            color: #87ceeb;
            min-width: 120px;
            margin-right: 10px;
        }
        .house-info-value {
            flex: 1;
            word-break: break-word;
        }
        .house-highlight {
            background: linear-gradient(145deg, #ffd700, #ffa500);
            color: #000;
            padding: 2px 6px;
            border-radius: 4px;
            font-weight: bold;
            margin: 0 2px;
        }
    `;
    document.head.appendChild(style);

    let houses = [];
    let apartments = [];
    let isDataLoaded = false;

    // Загрузка данных
    function loadData() {
        const housesUrl = 'https://raw.githubusercontent.com/Amnyambal/brscript/main/house.json';
        const apartmentsUrl = 'https://raw.githubusercontent.com/Amnyambal/brscript/main/apartments.json';

        Promise.all([
            new Promise((resolve, reject) => {
                GM_xmlhttpRequest({
                    method: 'GET',
                    url: housesUrl,
                    onload: function(response) {
                        try {
                            houses = JSON.parse(response.responseText);
                            resolve();
                        } catch (e) {
                            reject(e);
                        }
                    },
                    onerror: reject
                });
            }),
            new Promise((resolve, reject) => {
                GM_xmlhttpRequest({
                    method: 'GET',
                    url: apartmentsUrl,
                    onload: function(response) {
                        try {
                            apartments = JSON.parse(response.responseText);
                            resolve();
                        } catch (e) {
                            reject(e);
                        }
                    },
                    onerror: reject
                });
            })
        ]).then(() => {
            isDataLoaded = true;
            console.log(`[House Helper] Данные загружены: ${houses.length} домов, ${apartments.length} квартир`);
            processPage();
        }).catch(error => {
            console.error('[House Helper] Ошибка загрузки данных:', error);
        });
    }

    // Создание модального окна
    function createModal(info, type) {
        const overlay = document.createElement('div');
        overlay.className = 'house-modal-overlay';
        
        const modal = document.createElement('div');
        modal.className = 'house-modal';

        const title = type === 'house' ? `Дом #${info.id}` : `Квартира #${info.id}`;

        modal.innerHTML = `
            <div class="house-modal-header">
                <h3 class="house-modal-title">${title}</h3>
                <button class="house-modal-close">&times;</button>
            </div>
            <div class="house-modal-content">
                ${type === 'house' ? `
                    <div class="house-info-item">
                        <span class="house-info-label">Местоположение:</span>
                        <span class="house-info-value">${info.location || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Класс:</span>
                        <span class="house-info-value">${info.type || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Цена:</span>
                        <span class="house-info-value">${info.price || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Гараж:</span>
                        <span class="house-info-value">${info.garage || '—'}</span>
                    </div>
                ` : `
                    <div class="house-info-item">
                        <span class="house-info-label">Местоположение:</span>
                        <span class="house-info-value">${info.location || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Класс:</span>
                        <span class="house-info-value">${info.type || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Подъезд:</span>
                        <span class="house-info-value">${info.entrance || '—'}</span>
                    </div>
                    <div class="house-info-item">
                        <span class="house-info-label">Цена:</span>
                        <span class="house-info-value">${info.price || '—'}</span>
                    </div>
                `}
            </div>
        `;

        overlay.appendChild(modal);
        document.body.appendChild(overlay);

        // Закрытие модального окна
        const closeBtn = modal.querySelector('.house-modal-close');
        closeBtn.addEventListener('click', () => overlay.remove());
        overlay.addEventListener('click', (e) => {
            if (e.target === overlay) overlay.remove();
        });

        // Закрытие по ESC
        const closeHandler = (e) => {
            if (e.key === 'Escape') overlay.remove();
        };
        document.addEventListener('keydown', closeHandler);
        overlay.addEventListener('click', () => {
            document.removeEventListener('keydown', closeHandler);
        });
    }

    // Обработка текста и добавление кнопок
    function processTextNode(node) {
        const text = node.textContent;
        
        // Регулярные выражения для поиска ID домов и квартир
        const houseRegex = /дом\s*\(sql:\s*(\d+)\)/gi;
        const apartmentRegex = /квартира\s*\(sql:\s*(\d+)\)/gi;
        
        let match;
        const elements = [];
        
        // Поиск домов
        while ((match = houseRegex.exec(text)) !== null) {
            const id = parseInt(match[1]);
            elements.push({
                type: 'house',
                id: id,
                start: match.index,
                end: match.index + match[0].length,
                originalText: match[0]
            });
        }
        
        // Поиск квартир
        while ((match = apartmentRegex.exec(text)) !== null) {
            const id = parseInt(match[1]);
            elements.push({
                type: 'apartment',
                id: id,
                start: match.index,
                end: match.index + match[0].length,
                originalText: match[0]
            });
        }
        
        if (elements.length === 0) return;
        
        // Сортируем по позиции в тексте (с конца к началу)
        elements.sort((a, b) => b.start - a.start);
        
        const parent = node.parentNode;
        let currentText = text;
        
        elements.forEach(element => {
            const beforeText = currentText.substring(0, element.start);
            const afterText = currentText.substring(element.end);
            
            const span = document.createElement('span');
            span.className = 'house-highlight';
            span.textContent = element.originalText;
            
            const button = document.createElement('button');
            button.className = 'house-info-btn';
            button.textContent = 'ℹ️';
            button.title = `Информация о ${element.type === 'house' ? 'доме' : 'квартире'} #${element.id}`;
            
            button.addEventListener('click', (e) => {
                e.stopPropagation();
                if (!isDataLoaded) {
                    alert('Данные еще загружаются...');
                    return;
                }
                
                const dataArray = element.type === 'house' ? houses : apartments;
                const info = dataArray.find(item => item.id === element.id);
                
                if (info) {
                    createModal(info, element.type);
                } else {
                    alert(`${element.type === 'house' ? 'Дом' : 'Квартира'} с ID ${element.id} не найден в базе данных`);
                }
            });
            
            const wrapper = document.createElement('span');
            wrapper.appendChild(span);
            wrapper.appendChild(button);
            
            // Создаем текстовый узел для текста после элемента
            const afterNode = document.createTextNode(afterText);
            
            // Заменяем текущий текстовый узел
            parent.replaceChild(afterNode, node);
            
            // Вставляем кнопку перед текстом "после"
            parent.insertBefore(wrapper, afterNode);
            
            // Создаем текстовый узел для текста до элемента
            const beforeNode = document.createTextNode(beforeText);
            parent.insertBefore(beforeNode, wrapper);
            
            // Обновляем текущий узел для следующей итерации
            node = beforeNode;
            currentText = beforeText;
        });
    }

    // Рекурсивная обработка DOM
    function processNode(node) {
        if (node.nodeType === Node.TEXT_NODE) {
            processTextNode(node);
        } else if (node.nodeType === Node.ELEMENT_NODE) {
            // Пропускаем script и style
            if (['SCRIPT', 'STYLE', 'BUTTON'].includes(node.tagName)) return;
            
            // Обрабатываем дочерние узлы
            Array.from(node.childNodes).forEach(processNode);
        }
    }

    // Обработка всей страницы
    function processPage() {
        const contentElements = document.querySelectorAll('td, div, span, p');
        contentElements.forEach(element => {
            Array.from(element.childNodes).forEach(processNode);
        });
    }

    // MutationObserver для отслеживания изменений DOM
    function initObserver() {
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                mutation.addedNodes.forEach((node) => {
                    if (node.nodeType === Node.ELEMENT_NODE) {
                        processNode(node);
                    }
                });
            });
        });

        observer.observe(document.body, {
            childList: true,
            subtree: true
        });
    }

    // Инициализация
    function init() {
        console.log('[House Helper] Инициализация...');
        loadData();
        initObserver();
        
        // Обрабатываем существующий контент
        setTimeout(() => {
            if (document.body) {
                processPage();
            }
        }, 1000);
    }

    // Запуск при загрузке страницы
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
})();
